<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Primary" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <item name="android:statusBarColor">@android:color/background_dark
        </item>
        <item name="android:navigationBarColor">@android:color/background_dark
        </item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            false
        </item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/background_dark
        </item>
    </style>
</resources>