<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="screen_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_title">
        <item name="android:textColor">@color/gray_dark_text</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="item_detail_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_description">
        <item name="android:textColor">@color/gray_dark_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="item_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="item_small_text">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="newsItemImageCornerRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp
        </item> <!-- Adjust the corner size as per your preference -->
    </style>
</resources>